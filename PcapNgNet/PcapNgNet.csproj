<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFramework>netstandard1.6</TargetFramework>
    <AssemblyName>PcapNgNet</AssemblyName>
    <RootNamespace>PcapNgNet</RootNamespace>
    <Version>1.1</Version>
    <Description>A reader/writer for PCAPNG files.</Description>
    <Authors>Jeff Haynes</Authors>
    <Company />
    <PackageTags>PCapNg</PackageTags>
    <PackageReleaseNotes>Updated serializer, switched to .NET standard, new language features, use new project SDK format.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/jefffhaynes/PcapNgNet</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/mit-license.php</PackageLicenseUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BinarySerializer" Version="8.6.2.2" />
  </ItemGroup>

</Project>
